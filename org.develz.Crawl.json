{
    "app-id": "org.develz.Crawl",
    "runtime": "org.freedesktop.Platform",
    "runtime-version": "23.08",
    "sdk": "org.freedesktop.Sdk",
    "command": "crawl",
    "finish-args": [
        "--socket=fallback-x11",
        "--socket=pulseaudio",
        "--socket=wayland",
        "--share=ipc",
        "--device=dri",
        "--filesystem=~/.crawl:create",
        "--filesystem=~/.crawlrc:ro"
    ],
    "modules": [
        "shared-modules/glu/glu-9.json",
        "shared-modules/lua5.1/lua-5.1.5.json",
        "python3-PyYAML.json",
        {
            "name": "crawl",
            "buildsystem": "autotools",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/crawl/crawl/releases/download/0.30.1/stone_soup-0.30.1-nodeps.tar.xz",
                    "sha256": "906d376ef8001fbf9f7a05245030f64f9300c6ce3855d2f8dc81cd8d48ef0a46"
                },
                {
                    "type": "file",
                    "path": "org.develz.Crawl.appdata.xml",
                    "dest": "source"
                }
            ],
            "subdir": "source",
            "no-autogen": true,
            "make-args": [
                "prefix=/app",
                "DATADIR=share/crawl",
                "SAVEDIR=~/.crawl",
                "EXTERNAL_LDFLAGS=-L/app/lib",
                "EXTERNAL_DEFINES=-DVERSIONED_CACHE_DIR",
                "TILES=y"
            ],
            "make-install-args": [
                "prefix=/app",
                "DATADIR=share/crawl",
                "SAVEDIR=~/.crawl",
                "EXTERNAL_LDFLAGS=-L/app/lib",
                "EXTERNAL_DEFINES=-DVERSIONED_CACHE_DIR",
                "TILES=y",
                "XDG_NAME=org.develz.Crawl",
                "install-xdg-data"
            ],
            "post-install": [
                "rm -rf /app/share/metainfo",
                "install -D org.develz.Crawl.appdata.xml /app/share/appdata/org.develz.Crawl.appdata.xml",
                "sed -i 's/ (.*)//g' /app/share/applications/org.develz.Crawl.desktop"
            ]
        }
    ]
}
