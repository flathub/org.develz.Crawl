{
    "app-id": "org.develz.Crawl",
    "runtime": "org.freedesktop.Platform",
    "runtime-version": "22.08",
    "sdk": "org.freedesktop.Sdk",
    "command": "crawl",
    "finish-args": [
        "--socket=x11",
        "--socket=pulseaudio",
        "--socket=wayland",
        "--share=ipc",
        "--device=dri",
        "--filesystem=~/.crawl:create",
        "--filesystem=~/.crawlrc:ro"
    ],
    "modules": [
        "shared-modules/glu/glu-9.json",
        "shared-modules/lua5.1/lua-5.1.5.json",
        "python3-PyYAML.json",
        {
            "name": "crawl",
            "buildsystem": "autotools",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/crawl/crawl/releases/download/0.29.1-debian/crawl_0.29.1.orig.tar.xz",
                    "sha256": "b5032c96f27de202bf24e11361b8cf4509839821916804978892df1f29f95bd3"
                },
                {
                    "type": "file",
                    "path": "org.develz.Crawl.appdata.xml",
                    "dest": "source"
                }
            ],
            "subdir": "source",
            "no-autogen": true,
            "make-args": [
                "prefix=/app",
                "DATADIR=share/crawl",
                "SAVEDIR=~/.crawl",
                "EXTERNAL_LDFLAGS=-L/app/lib",
                "TILES=y"
            ],
            "make-install-args": [
                "prefix=/app",
                "DATADIR=share/crawl",
                "SAVEDIR=~/.crawl",
                "EXTERNAL_LDFLAGS=-L/app/lib",
                "TILES=y",
                "XDG_NAME=org.develz.Crawl",
                "install-xdg-data"
            ],
            "post-install": [
                "rm -rf /app/share/metainfo",
                "install -D org.develz.Crawl.appdata.xml /app/share/appdata/org.develz.Crawl.appdata.xml",
                "sed -i 's/ (.*)//g' /app/share/applications/org.develz.Crawl.desktop"
            ]
        }
    ]
}
